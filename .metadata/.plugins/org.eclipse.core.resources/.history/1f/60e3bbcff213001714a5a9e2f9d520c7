package Panels;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.*;
import interfaces.FramePanelSetting;
import main.*;

public class infoPage extends JPanel implements FramePanelSetting{
	private JButton startBtn;
	private cafeTime  F;
	
	public infoPage(cafeTime f){
		setBackground(Color.orange);
		setSize(FRAME_PANEL_WIDTH, FRAME_PANEL_HEIGHT);
		setLayout(null);
		
		F = f;
		
		startBtn = new JButton("현재는 infoPage");
		startBtn.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent arg0) {
				F.getCardLayout().show(F.getContentPane(), "show");
			}
		});
		startBtn.setBounds(280, 10, START_INFO_WIDTH, START_INFO_HEIGHT);
		add(startBtn);
		
		setVisible(true);
	}
	
	public void paint(Graphics g){
		g.drawImage(new ImageIcon("img/bg3.png").getImage(), 0, 0, this);
		
		// 이미지 입히기로 인해 버튼들이 안보이는 경우가 발생하므로 repaint() 해준다.
		startBtn.repaint();
	}
}
